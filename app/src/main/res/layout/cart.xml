<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:id="@+id/CartLinearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/Cart_imageView"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:padding="4dp"
                android:layout_alignParentStart="true"
                />
            <ProgressBar
                android:layout_alignParentStart="true"
                android:id="@+id/Cart_progressBar"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:visibility="visible"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                >

            </ProgressBar>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20sp"
                android:ellipsize="end"
                android:maxLength="30"
                android:layout_toEndOf="@id/Cart_imageView"
                android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <Button
                android:id="@+id/Cart_Delete_Button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/deletebutton"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle"
                style="@style/basicSpaces"
                android:ellipsize="end"
                android:maxLength="20"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/Cart_imageView"
                android:text="13.3 Inch, 256 GB"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <Spinner
                android:id="@+id/Cart_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Cart_imageView"
                android:layout_below="@+id/textViewShortDesc"
                android:textAlignment="center"
                style="@style/basicSpaces"
                />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Cart_Quantity"
                style="@style/basicSpaces"
                android:layout_toRightOf="@id/Cart_imageView"
                android:text="Rs 56990"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

</LinearLayout>