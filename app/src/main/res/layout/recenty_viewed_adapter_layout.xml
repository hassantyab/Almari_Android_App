<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/recent_viewed_image"
        android:layout_width="60sp"
        android:layout_height="80sp"
        android:layout_margin="10sp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        />
    <ProgressBar
        android:id="@+id/recent_viewed_prgressBar"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/recent_viewed_brandName"
        android:layout_toEndOf="@+id/recent_viewed_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/TopSpaces"
        android:textColor="@color/BrandColor"
        />

    <TextView
        android:id="@+id/recent_viewed_title"
        android:layout_below="@id/recent_viewed_brandName"
        android:layout_toEndOf="@+id/recent_viewed_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/basicSpaces"
        android:textColor="@color/TextPrimary"
        />

    <TextView
        android:id="@+id/recent_viewed_price"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/recent_viewed_image"
        android:layout_below="@+id/recent_viewed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/basicSpaces"
        />

    <Button
        android:id="@+id/recent_viewed_btn"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/recent_viewed_title"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="30sp"
        android:text="Buy Now"
        style="@style/buttonColor"
        android:textColor="@color/white"
        />

</RelativeLayout>