<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180sp"
    android:layout_height="210sp"
    android:orientation="vertical"
    android:id="@+id/card_mostViewed"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5sp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Category_p_Image"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_margin="10sp"
                />

            <ProgressBar
                android:id="@+id/Category_progress"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                android:indeterminateTint="@color/colorPrimary"
                >

            </ProgressBar>
        </RelativeLayout>

        <TextView
            android:id="@+id/Category_p_Brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20dp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/Category_p_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/Category_P_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:maxLength="10"
            android:textColor="@android:color/darker_gray" />
        <RatingBar
            android:id="@+id/Category_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RatingBar"
            android:numStars="5"
            android:max="5"
            android:stepSize="0.5"
            android:rating="3"
            android:layout_marginStart="20sp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>